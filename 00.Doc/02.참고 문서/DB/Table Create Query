CREATE TABLE HASHTAG( HCODE CHAR(4) NOT NULL, START INT NOT NULL, END INT NOT NULL, TEXT TEXT NOT NULL, PRIMARY KEY(HCODE, START, END));

CREATE TABLE USER( UCODE CHAR(4) NOT NULL, ID VARCHAR(20) NOT NULL, NAME VARCHAR(50) NOT NULL, SCREEN_NAME VARCHAR(50) NOT NULL, LOCATION VARCHAR(20), DESCRIPTION TEXT, PRIMARY KEY(UCODE));

CREATE TABLE JSON( YEAR CHAR(4) NOT NULL, MONTH CHAR(4) NOT NULL, DAY CHAR(4) NOT NULL, HOUR CHAR(2) NOT NULL, MINUTE CHAR(2) NOT NULL, SECOND CHAR(2) NOT NULL, ID VARCHAR(20) NOT NULL,  TEXT TEXT NOT NULL, TRUNCATED CHAR(1) NOT NULL,  HASHTAG CHAR(4) NOT NULL, USER CHAR(4) NOT NULL, RETWEET_COUNT INT, FAVORITE_COUNT INT, LANG VARCHAR(10), PRIMARY KEY(YEAR, MONTH, DAY, HOUR, MINUTE, SECOND, ID));
ALTER TABLE JSON ADD CONSTRAINT FK_HASHTAG FOREIGN KEY(HASHTAG) REFERENCES HASHTAG(HCODE);
ALTER TABLE JSON ADD CONSTRAINT FK_USER FOREIGN KEY(USER) REFERENCES USER(UCODE);


CREATE TABLE KEYWORD_COUNT( KEYWORD VARCHAR(10) NOT NULL, COUNT INT NOT NULL, PRIMARY KEY(KEYWORD));


CREATE TABLE HASHTAG_COUNT( HASHTAG VARCHAR(10) NOT NULL, COUNT INT NOT NULL, PRIMARY KEY(HASHTAG));

